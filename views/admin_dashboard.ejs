<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
</head>
<body>
    <h2>Welcome, <%= username %> (Admin)</h2>

    <!-- Links to Admin Actions -->
    <ul>
        <li><a href="/admin/addUser">Add New User</a></li>
        <li><a href="/admin/addReseller">Add Reseller</a></li>
        <li><a href="/admin/topUpReseller">Top-Up Reseller Credit</a></li>
        <a href="/logout">Logout</a>
    </ul>

    <!-- Users Table -->
    <h3>Users</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>User Code</th>
                <th>Expiration Date</th>
                <th>Allowed Countries</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.userCode %></td>
                    <td><%= user.expiration %></td>
                    <td><%= user.allowedCountries %></td>
                    <td><%= user.userId %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Resellers Table -->
    <h3>Resellers</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <td>Password</td>
                <th>Credit Balance</th>
            </tr>
        </thead>
        <tbody>
            <% resellers.forEach(reseller => { %>
                <tr>
                    <td><%= reseller.username %></td>
                    <td><%= reseller.password %></td>
                    <td><%= reseller.credit_balance %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
